# Database (Neon Postgres)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY_HERE"
DIRECT_URL="postgres://user:password@host:5432/database?sslmode=require"

# NextAuth (optional for MVP)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Email (Resend - for certificate notifications and expiry reminders)
RESEND_API_KEY=re_your_key_here
FROM_EMAIL=noreply@crewresourcemining.com.au

# Cron Security (for automated email reminders)
CRON_SECRET=generate-with-openssl-rand-base64-32

# App Config
NEXT_PUBLIC_APP_NAME="Crew Resource Mining"
NEXT_PUBLIC_APP_URL=http://localhost:3000
